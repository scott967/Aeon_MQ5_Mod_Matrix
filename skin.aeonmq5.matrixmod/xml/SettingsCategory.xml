<?xml version="1.0" encoding="UTF-8"?>
<!-- Aeon MQ 5 Helix 6.1.0/Orby/6.1.4 -->
<!-- Isengard 7.1.9 -->
<!-- Jarvis 8.1.13/8.1.14 -->
<!-- Krypton 9.1.17/9.1.19 -->
<!-- Leai 10.2.4/10.3.0/10.6.2 -->
<window>
	<defaultcontrol>3</defaultcontrol>
	<onload condition="!String.IsEqual(skin.string(defaultsettings),2)">AlarmClock(firstfocus,SetFocus(900),0:10,true)</onload>
	<controls>
		<control type="multiimage">
			<include>WindowBG</include>
			<imagepath background="true">$VAR[value_menutheme_settings]</imagepath>
		</control>
		<control type="group">
			<!-- default group -->
			<include>Animation_Window</include>
			<include>SettingsBack</include>
			<!-- Menu da direita -->
			<visible>!Window.IsActive(PVRChannelManager)</visible>
			<!-- Heading label supplied by window -->
			<control type="label" id="2">
				<include>SettingsContentTitle</include>
				<label></label>
			</control>
			<control type="image">
				<posx>360</posx>
				<posy>900</posy>
				<height>180</height>
				<width>1560</width>
				<texture flipy="true">osd_grey_bg.png</texture>
				<colordiffuse>$VAR[value_texturecolor]</colordiffuse>
				<animation effect="fade" end="85" condition="true">Conditional</animation>
			</control>
			<control type="image">
				<!-- Painel de info no rodape -->
				<posx>360</posx>
				<posy>900</posy>
				<height>3</height>
				<width>1560</width>
				<texture>separator.png</texture>
			</control>
			<control type="textbox" id="6">
			<!-- window template -->
				<posx>435</posx>
				<posy>915</posy>
				<width>1410</width>
				<height>135</height>
				<font>Font_18A</font>
				<align>justify</align>
				<aligny>top</aligny>
				<textcolor>FFFFFAF0</textcolor>
				<autoscroll time="3000" delay="4000" repeat="5000">true</autoscroll>
			</control>
			<control type="grouplist" id="5">
			<!-- details of settings -->
				<posx>360</posx>
				<posy>180</posy>
				<width>1560</width>
				<height>720</height>
				<itemgap>0</itemgap>
				<onup>5</onup>
				<ondown>5</ondown>
				<onleft>3</onleft>
				<onright>80</onright>
				<pagecontrol>80</pagecontrol>
			</control>
			<control type="button" id="7"></control>
			<control type="radiobutton" id="8"></control>
			<control type="spincontrolex" id="9"></control>
			<control type="sliderex" id="13"></control>
			<control type="label" id="14">
				<height>45</height>
				<align>center</align>
			</control>
			<include>RSS</include>
			<control type="scrollbar" id="80">
				<include>ScrollBar_Vertical</include>
				<posx>1860</posx>
				<posy>195</posy>
				<height>696</height>
				<onleft>5</onleft>
				<onright>3</onright>
				<animation effect="fade" time="200">Visible</animation>
				<animation effect="fade" time="50">Hidden</animation>
			</control>
			<include>SettingsMenu</include>
			<!-- Menu da esquerda -->
			<include>Date</include>
			<control type="label">
			<!-- OPTIONS -->
				<include>SettingsSectionTitle</include>
				<label>31202</label>
			</control>
			<control type="group">
				<!-- Slide out menu settings level -->
				<posx>-450</posx>
				<animation effect="slide" start="0,0" end="450,0" time="300" easing="out" tween="cubic" condition="ControlGroup(9900).HasFocus">Conditional</animation>
				<control type="grouplist" id="9900">
					<posx>0</posx>
					<posy>180</posy>
					<width>360</width>
					<height>990</height>
					<orientation>vertical</orientation>
					<itemgap>0</itemgap>
					<onleft>9900</onleft>
					<onright>3</onright>
					<onup>9900</onup>
					<ondown>9900</ondown>
					<onback>3</onback>
					<control type="button" id="20">
						<!-- Setting level -->
						<aligny>center</aligny>
						<include>SettingsButton</include>
						<label>10037</label>
						<onclick>SettingsLevelChange</onclick>
					</control>
					<control type="button" id="21">
						<!-- Reset level -->
						<aligny>center</aligny>
						<include>SettingsButton</include>
						<label>10035</label>
						<onclick>SettingsReset</onclick>
					</control>
				</control>
			</control>
			<control type="grouplist" id="3">
			<!-- options list -->
				<posx>0</posx>
				<posy>180</posy>
				<width>360</width>
				<height>990</height>
				<orientation>vertical</orientation>
				<itemgap>0</itemgap>
				<onleft>9900</onleft>
				<onright>5</onright>
				<onup>3</onup>
				<ondown>3</ondown>
				<animation effect="slide" start="0,0" end="-450,0" time="300" easing="out" tween="cubic" condition="ControlGroup(9900).HasFocus">Conditional</animation>
			</control>
			<control type="image">
				<posx>0</posx>
				<posy>0</posy>
				<width>375</width>
				<height>1080</height>
				<texture>menu_glass.png</texture>
				<colordiffuse>70FFFAF0</colordiffuse>
			</control>
			<control type="button" id="10">
				<!-- Default category button-->
				<include>SettingsButton2</include>
				<onclick>SetFocus(800)</onclick>
			</control>
			<include>BGBlack</include>
		</control>
	</controls>
</window>
